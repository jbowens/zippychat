{
    "meta": {
        "description": "A configuration file for ZippyChat.com",
        "esprit_version": "1.0a"
    },

    "debug": true,

    "db_default_dsn": "mysql:host=localhost;dbname=esprit;charset=utf8",
    "db_default_user": "esprit",
    "db_default_pass": "t0st1tos",

    "memcached": {
        "key_prefix": "zc_"
    },
    
    "default_timezone": "America/New_York",

    "css": {
        "sources": ["/var/www/css"],
        "compressed_dir": "/var/www/static/css"
    },

    "FallbackCommand": "\\zc\\commands\\Command_DefaultFallback",

    "twig": {
        "twig_autoloader": "/var/www/vendor/autoload.php",
        "templates_dir": "/var/www/templates",
        "options": {
            "cache": "/var/www/twigcache",
            "debug": true
        }
    }

}
